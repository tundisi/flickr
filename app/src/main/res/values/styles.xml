<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/gray_drawer</item>
        <item name="android:textColorPrimary">@color/gray_drawer</item>
        <item name="android:textColorSecondary">@color/gray_drawer</item>
        <item name="textColorAlertDialogListItem">@android:color/black</item>
        <item name="android:textColorAlertDialogListItem">@android:color/black</item>
    </style>

    <!--       Roboto         -->

    <style name="RobotoTextTitle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
    </style>

    <style name="RobotoTextSubTitle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/gray_drawer</item>
        <item name="android:textSize">@dimen/font_size_subtitle</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="RobotoTextBold" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/font_size_regular</item>
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
    </style>

    <style name="RobotoTextRegular" parent="android:Widget.TextView">
        <item name="android:textColor">@color/gray_drawer</item>
        <item name="android:textSize">@dimen/font_size_regular</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <dimen name="font_size_regular">13sp</dimen>
</resources>
